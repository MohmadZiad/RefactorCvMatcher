{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/ui/*"],
      "@shared/types/*": ["packages/types/*"],
      "@config/*": ["packages/config/*"],
      "@lingua/*": ["packages/lingua/*"],
      "@api/*": ["apps/api/src/*"]
    }
  }
}
